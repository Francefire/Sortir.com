<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir.com{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="stylesheet" href="{{ asset('styles/base.css') }}">
{#
<link rel="stylesheet" href="{{ asset('styles/form.css') }}">
#}
    {% block stylesheets %}{% endblock %}
</head>
<body>
<header>
    <a href="/">
        <p>SORTIR.</p>
        <p>COM</p>
    </a>
    <nav>
        <a href="{{ path('activity_list') }}" class="{% if 'list' in app.request.pathInfo%}accent{% endif %}">Accueil</a>
        {% if app.user %}
            <a href="{{ path('user_profile', {'id': app.user.id}) }}" class="{% if 'profile' in app.request.pathInfo%}accent{% endif %}">Mon Profil</a>
            <a href="{{ path('app_logout') }}">Se Déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}">Se Connecter</a>
        {% endif %}
    </nav>
</header>
<main>
    {% for messages in app.flashes %}
        {% for message in messages %}
            <div>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</main>
<footer>
    <nav>
        <a href="{{ path('main_home') }}">Accueil</a>
        <a href="#">?????</a>
        <a href="#">?????</a>
        <a href="#">?????</a>
        <a href="#">?????</a>
    </nav>
    <p>&copy; 2024 Valentin, Maxime, Touhami</p>
</footer>
</body>
</html>
