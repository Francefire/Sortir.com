    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}
</head>
<body class="font-inter bg-palette-light-light text-black min-h-screen flex flex-col">
<header>
    <nav class="flex justify-between items-center w-full p-6">
        <div>
            <a href="/" class="text-6xl font-bold text-left hover:text-palette-accent-dark">
                <p>SORTIR.</p>
                <p>COM</p>
            </a>
        </div>
        <div class="font-bold space-x-4 text-xl decoration-4">
            <a href="{{ path('activities_list') }}"
               class="{% if 'list' in app.request.pathInfo %}text-palette-accent-dark{% endif %} hover:underline hover:text-palette-accent-dark">Accueil</a>
            {% if app.user %}
                <a href="{{ path('users_profile', {'id': app.user.id}) }}"
                   class="{% if 'profile' in app.request.pathInfo %}text-palette-accent-dark{% endif %} hover:underline hover:text-palette-accent-dark">Mon Profil</a>
                <a href="{{ path('app_logout') }}" class="hover:underline hover:text-palette-accent-dark">Se DÃ©connecter</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="hover:underline hover:text-palette-accent-dark">Se Connecter</a>
            {% endif %}
        </div>
    </nav>
</header>
<main class="">
    {% for messages in app.flashes %}
        {% for message in messages %}
            <div>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</main>
<footer class="bg-palette-dark-dark font-medium text-palette-accent-light w-full flex flex-row-reverse justify-between items-center px-4 p-6 mt-auto">
