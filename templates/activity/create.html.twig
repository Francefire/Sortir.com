{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Créer une sortie{% endblock %}

{% block body %}
    {{ form_errors(activityForm) }}

    {{ form_start(activityForm, {attr: {id : 'create_activity_form'}}) }}
    <h5>Créer une sortie</h5>
    {{ form_row(activityForm.name) }}
    {{ form_row(activityForm.startDatetime) }}
    {{ form_row(activityForm.registerLimitDatetime) }}
    {{ form_row(activityForm.maxParticipants) }}
    {{ form_row(activityForm.duration) }}
    {{ form_row(activityForm.description) }}
    {{ form_row(activityForm.city) }}
    {{ form_row(activityForm.location) }}
        <a class="btn btn-link" data-bs-toggle="collapse" href="#addLocation" role="button" aria-expanded="false" aria-controls="addLocation">
            Ajouter un lieu
        </a>
    {{ form_row(activityForm.save) }}
    {{ form_row(activityForm.publish) }}
    <a href="{{ path('main_home') }}" class="btn btn-primary">Retour</a>
    {{ form_end(activityForm) }}

    <div class="collapse" id="addLocation">
        <div class="">
            {{ form_start(locationForm) }}
            {{ form_widget(locationForm) }}
            {{ form_end(locationForm) }}
        </div>
    </div>

{% endblock %}

