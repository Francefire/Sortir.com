{% extends 'base.html.twig' %}

{% block title %}Creation ville{% endblock %}

{% block body %}
    <h1>Cr√©ation de ville</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ville</th>
            <th scope="col">Code Postal</th>
            <th scope="col">Actions</th>


        </tr>
        </thead>
        <tbody>
        <tr>
            {% for city in citys %}

        <tr>
            <th scope="row">{{ city.id }}</th>

            <td>{{ city.name }}</td>
            <td>{{ city.postalCode }}</td>
            <td><a class="btn btn-primary" href="{{ path('app_city_edit', {'id': city.id}) }}">Modifier</a>  <a class="btn btn-primary" href="{{ path('app_city_delete', {'id': city.id})  }}">Supprimer</a></td>


        </tr>

        {% endfor %}
        <tr>
            <th scope="row"></th>
            {{ form_start(cityForm) }}


            <td>{{ form_widget(cityForm.name) }}</td>
            <td>{{ form_widget(cityForm.postalCode) }}</td>

            <td><button type="submit" class="btn btn-primary">Ajouter</button></td>

            {{ form_end(cityForm) }}

        </tr>

        </tbody>
    </table>

{% endblock %}
