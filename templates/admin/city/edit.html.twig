    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ville</th>
            <th scope="col">Code Postal</th>
            <th scope="col">Actions</th>


        </tr>
        </thead>
        <tbody>



                <tr>
                    <th scope="row">{{ city.id }}</th>
